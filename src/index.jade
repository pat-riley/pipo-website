extends _layouts/primary

block content
  section.bg-white-gradient
    .container
      .row.text-center
        h1 You don't have to slack on your teams security
        p PGP Client Side encrypted multi party chat made easy
        button.btn.btn-secondary Try it out 
        img(src="images/table.svg" width="100%")
    .row.border-top-grey.m-x-5.p-y-lg.m-t-lg.bg-transparent
      .container.p-x-0
        .col-xs-5
          .row
            .col-sm-15.col-md-4.col-lg-4
              img.badge(src="images/lock.svg")
            .col-sm-15.col-md-11.col-lg-11
              p.badge-label Say Anything
              p.badge-title Secure your teams  channels using the best cryptography
        
        .col-xs-5
          .row
            .col-sm-15.col-md-4.col-lg-4
              img.badge(src="images/chain.svg")
            .col-sm-15.col-md-11.col-lg-11
              p.badge-label Secure Development
              p.badge-title Share private keys and sensative business information
        
        .col-xs-5
          .row
            .col-sm-15.col-md-4.col-lg-4
              img.badge(src="images/group.svg")
            .col-sm-15.col-md-11.col-lg-11
              p.badge-label Security Breaches
              p.badge-title Leverage the PGP to eliminate man in the middle attacks
